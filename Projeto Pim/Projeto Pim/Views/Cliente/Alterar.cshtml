@model Projeto_Pim.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <link href="~/Content/themes/base/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-1.7.1.intellisense.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/_references.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/knockout-2.1.0.debug.js"></script>
    <script src="~/Scripts/knockout-2.1.0.js"></script>
    <script src="~/Scripts/modernizr-2.5.3.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link href="~/Content/themes/jquery-ui.css" rel="stylesheet" />

    <title>Alterar</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
            @ViewBag.Mensagem
            @Html.HiddenFor(model => model.Id)

         <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="@Url.Action("Index", "Home")">Pizzaria Master</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="@Url.Action("Lista", "Cliente")">Cliente</a></li>
                        <li><a href="@Url.Action("Lista", "Pedido")">Pedido</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
            <div class="container">
                <div class="row">
                    <div class="span3">
                        @Html.LabelFor(model => model.Nome)
                        @Html.EditorFor(model => model.Nome)
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.Cpf)
                        @Html.EditorFor(model => model.Cpf)
                        @Html.ValidationMessageFor(model => model.Cpf)
                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.DataNascimento)
                        @Html.EditorFor(model => model.DataNascimento)
                        @Html.ValidationMessageFor(model => model.DataNascimento)
                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.Endereco)
                        @Html.EditorFor(model => model.Endereco)
                        @Html.ValidationMessageFor(model => model.Endereco)
                    </div>
                </div>
                <div class="row">
                    <div class="span3">
                        @Html.LabelFor(model => model.Cep)
                        @Html.EditorFor(model => model.Cep)
                        @Html.ValidationMessageFor(model => model.Cep)

                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.Complemento)
                        @Html.EditorFor(model => model.Complemento)
                        @Html.ValidationMessageFor(model => model.Complemento)

                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.Bairro)
                        @Html.EditorFor(model => model.Bairro)
                        @Html.ValidationMessageFor(model => model.Bairro)

                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.PontoReferencia)
                        @Html.EditorFor(model => model.PontoReferencia)
                        @Html.ValidationMessageFor(model => model.PontoReferencia)

                    </div>
                </div>
                <div class="row">
                    <div class="span3">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="span3">
                        @Html.LabelFor(model => model.Telefone)
                        @Html.EditorFor(model => model.Telefone)
                        @Html.ValidationMessageFor(model => model.Telefone)
                    </div>
                </div>
                <div class="row">
                    <div class="span4 offset3">
                        <input type="submit" value="Salvar" class="btn btn-small btn-success" />
                        <a href="@Url.Action("Lista", "Cliente")" class="btn btn-small btn-primary"><i class="icon-list icon-circle-arrow-left icon-white"></i>Retornar a lista</a>
                    </div>
                </div>
            </div>

    }


</body>
</html>
