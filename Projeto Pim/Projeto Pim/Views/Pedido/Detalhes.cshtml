@model Projeto_Pim.Models.Pedido

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/themes/base/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-1.7.1.intellisense.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/_references.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/knockout-2.1.0.debug.js"></script>
    <script src="~/Scripts/knockout-2.1.0.js"></script>
    <script src="~/Scripts/modernizr-2.5.3.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link href="~/Content/themes/jquery-ui.css" rel="stylesheet" />
</head>
<body>
     
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="@Url.Action("Index", "Home")">Pizzaria Master</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="@Url.Action("Lista", "Cliente")">Cliente</a></li>
                        <li><a href="@Url.Action("Lista", "Pedido")">Pedido</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <br/>
    <br/>
    <br/>
     <br/>
    <div class="container">
        <div class="row">
            <div class="span4 input-prepend">
                <span class="add-on">@Html.DisplayNameFor(model => model.ClienteId):</span>
                @Html.TextBoxFor(model => model.ClienteId, new { @class = "input-medium uneditable-input", @readonly = "readonly" })
            </div>
        </div>
           <div class="row">
               <div class="span4 input-prepend">
                   <span class="add-on">@Html.DisplayNameFor(model => model.Produto):</span>
                   @Html.TextBoxFor(model => model.Produto, new { @class = "input-medium uneditable-input", @readonly = "readonly" })
               </div>
               </div>
           <div class="row">
               <div class="span4 input-prepend">
                   <span class="add-on">@Html.DisplayNameFor(model => model.Observacao):</span>
                   @Html.TextBoxFor(model => model.Observacao, new { @class = "input-medium uneditable-input", @readonly = "readonly" })
               </div>
               </div>
           <div class="row">
            <div class="span4 input-prepend">
                <span class="add-on">@Html.DisplayNameFor(model => model.Endereco):</span>
                @Html.TextBoxFor(model => model.Endereco, new { @class = "input-medium uneditable-input", @readonly = "readonly" })
            </div>
        </div>
        
        <div class="row">
            <a href="@Url.Action("Lista", "Pedido")" class="btn btn-small btn-primary"><i class="icon-circle-arrow-left icon-white"></i>Retornar a lista</a>
        </div>
    </div>
</body>
</html>
